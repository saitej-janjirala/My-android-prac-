<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragon"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button6"
        android:layout_alignTop="@+id/button4"
        android:background="@drawable/pink"
        android:onClick="play1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@drawable/pink"
        android:onClick="play2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button11"
        android:layout_alignTop="@+id/button3"
        android:background="@drawable/pink"
        android:onClick="play3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button9"
        android:layout_marginTop="196dp"
        android:background="@drawable/pink"
        android:onClick="play4" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/button6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pink"
        android:onClick="play5" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button5"
        android:layout_alignTop="@+id/button6"
        android:background="@drawable/pink"
        android:onClick="play6" />

    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="22dp"
        android:background="@drawable/pink"
        android:onClick="play7" />

    <Button
        android:id="@+id/button10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/button9"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pink"
        android:onClick="play8" />

    <Button
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button14"
        android:layout_alignTop="@+id/button9"
        android:background="@drawable/pink"
        android:onClick="play9" />

    <Button
        android:id="@+id/button12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button3"
        android:layout_alignTop="@+id/button13"
        android:background="@drawable/pink"
        android:onClick="play10" />

    <Button
        android:id="@+id/button13"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="@drawable/pink"
        android:onClick="play11" />

    <Button
        android:id="@+id/button14"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button12"
        android:layout_marginEnd="24dp"
        android:background="@drawable/pink"
        android:onClick="play12" />

    <Button
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button3"
        android:onClick="recording"
        android:text="record" />

</RelativeLayout>